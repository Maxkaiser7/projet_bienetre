{% extends 'base.html.twig' %}

{% block title %}Stages{% endblock %}

{% block body %}
    <main>
        {% if prestataire_connecte %}
            <a href="{{ path('app_stage_ajouter') }}">Ajouter un stage</a>
        {% endif %}
        <div class="stage-container">
            {% for s in stages %}
                <div>
                    <h2><a href="{{ path('app_stage_show', {nom:s.nom}) }}">{{ s.nom }}</a></h2>
                    <p>par <a href="{{ path('prestataire_show', {id:s.prestataire.id}) }}">{{ s.prestataire }}</a></p>
                    <p>{{ s.description }}</p>
                </div>
            {% endfor %}
        </div>
    </main>
{% endblock %}
