{% extends 'base.html.twig' %}

{% block title %}Stages{% endblock %}

{% block body %}
    <main>
        {% if prestataire_connecte %}
            <a id="ajouter-stage" href="{{ path('app_stage_ajouter') }}">Ajouter un stage</a>
        {% endif %}


        <div class="stage-container">
            {% if pagination|length == 0 %}
                <p>Il n'y a pas de stages Ã  venir pour l'instant</p>
                {% else %}
                    {% for s in pagination %}
                        <a href="{{ path('app_stage_show', {nom: s.nom}) }}">
                            <div>
                                <h2>{{ s.nom }}</h2>
                                <p>par {{ s.prestataire }}</p>
                                <p>{{ s.description }}</p>
                            </div>
                        </a>
                    {% endfor %}
                    {{ knp_pagination_render(pagination) }}
            {% endif %}
        </div>
    </main>
{% endblock %}
